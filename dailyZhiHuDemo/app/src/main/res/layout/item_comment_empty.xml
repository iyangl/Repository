<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y345">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_comment_empty"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/comment_empty"/>

            <TextView
                android:id="@+id/tv_comment_empty"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_comment_empty"
                android:layout_centerHorizontal="true"
                android:text="@string/comment_empty_long"
                android:textColor="@color/comments_date"
                android:textSize="@dimen/x12"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>
