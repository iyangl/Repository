<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.ly.example.myapplication2.api.apibean.NewsBean.StoriesBean"/>

        <variable
            name="storiesbean"
            type="StoriesBean"/>

    </data>

    <LinearLayout
        android:background="@color/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="4dp"
            android:background="@drawable/item_main_news_back"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_item_main_news_image"
                android:text="@{storiesbean.title}"
                android:textSize="20sp"/>


            <ImageView
                android:id="@+id/iv_item_main_news_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="18dp"
                android:background="@color/colorAccent"
                android:scaleType="centerCrop"
                app:image="@{storiesbean.images}"/>


        </RelativeLayout>

    </LinearLayout>



</layout>
